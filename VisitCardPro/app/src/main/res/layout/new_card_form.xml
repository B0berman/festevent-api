<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/newc_name"
        android:textStyle="bold"
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/newc_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        />

    <TextView
        android:id="@+id/newc_desc"
        android:textStyle="bold"
        android:text="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/newc_edit_desc"
        android:lines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/newc_title"
        android:textStyle="bold"
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/newc_edit_title"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/newc_email"
        android:textStyle="bold"
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/newc_edit_email"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/newc_phone"
        android:textStyle="bold"
        android:text="Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/newc_edit_phone"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>